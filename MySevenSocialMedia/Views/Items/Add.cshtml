@model MySevenSocialMedia.Models.ViewModels.AddItemViewModel

<link href="~/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="~/js/froala_editor.pkgd.min.js"></script>

<div class="bg-secondary bg-opacity-10 m-5 py-2">
    <div class="container">
        <h1>Add A New Calendar Item</h1>
    </div>
</div>


<div class="m-5">
    @using (Html.BeginForm())
    {
        <div>
            <div class="mb-3">
                <label for="" class="form-label">Assign Date</label>
                <input type="date" class="form-control" asp-for="AssignedDate" />
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="Title" />
            </div>

            <div class="mb-3">
                <label for="" class="form-label">Location</label>
                <input type="text" class="form-control" asp-for="Location" />
            </div>

            <div class="mb-3">
                <label for="" class="form-label">Assign Priority:</label>
                @Html.EditorFor(m => m.AssignedPriority,"AssignedPriority")
            </div>

            <div class="mb-3">
                <textarea asp-for="Note" id="CalendarItemNoteEditor"></textarea>
                <script>

                    var editor = new FroalaEditor('#CalendarItemNoteEditor')

                </script>

            </div>

            <button type="submit" class="btn btn-primary">Update Calendar</button>
        </div>

    }

</div>
